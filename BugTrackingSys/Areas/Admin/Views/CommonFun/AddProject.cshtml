                                    <div>
                                        <div class="rows">
                                            <div id="divElement">
                                                <div class="box-body box-body-open">
                                                    <br><br>
                                                    <div class="form-group">
                                                        <label class="display-7  sFont text-center control-label">
                                                            Project Name
                                                        </label>
                                                        <input type="text" asp-for="@Model.project.Name" class="form-control">
                                                    </div>

