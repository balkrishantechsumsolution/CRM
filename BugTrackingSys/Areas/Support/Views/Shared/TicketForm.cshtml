@model BugTrackingSys.Areas.Support.Models.Ticket

<!DOCTYPE html>
<html>
<head>
    <title>Ticket Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
            color: #333;
        }

        h1 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        p {
            margin-bottom: 10px;
        }

        strong {
            font-weight: bold;
        }

        .ticket-details {
            border: 1px solid #ccc;
            padding: 20px;
            margin: 20px 0;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="ticket-details">
        <h1>Ticket Details</h1>
        <p><strong>ID:</strong> @Model.TaskId</p>
        <p><strong>Name:</strong> @Model.TaskName</p>
        <p><strong>Description:</strong> @Model.TaskDescription</p>
        <p><strong>Project ID:</strong> @Model.ProjectId</p>
        <p><strong>Assignee:</strong> @Model.TaskAssignee</p>
        <p><strong>Owner:</strong> @Model.Taskowner</p>
        <p><strong>Priority:</strong> @Model.Priority</p>
        <p><strong>Status:</strong> @Model.Status</p>
     
            <p><strong>Due:</strong> @Model.Enddate</p>
        
    </div>
</body>
</html>
