@model User_RolesModel


@{
}
<style>
    .sFont {
        color: goldenrod;
        font-weight: bold;
    }
</style>
<link href="https://unpkg.com/tailwindcss@1.0/dist/tailwind.min.css" rel="stylesheet" />

<div class="mx-2 grid grid-cols-3 gap-2  bg-green-600 rounded-lg">


    <h1 class="display-4  sFont text-center">Login Page</h1>    
</div>
<br />
<div class="mx-2 grid grid-cols-3 gap-2  bg-green-600 rounded-lg">
    <form class="form-horizontal" asp-action="Login">
        <section class="main-content">
            <div class="rows" style="min-height: 300px; margin: 0 auto; width: 50%">
                <div class="col-lg-12">
                    <div class="">
                        <div class="resp-tabs-container ver_1">
                            <div style="margin-top: 10px;">
                                <div>


                                    <div class="rows">
                                        <div id="divElement">
                                            <div class="box-body box-body-open">

                                                <div class="form-group">
                                                    <label class="display-7  sFont text-center control-label">
                                                        Username
                                                    </label>
                                                    <input type="text" asp-for="@Model.user.Id" class="form-control">
                                                </div>

                                                <div class="form-group">
                                                    <label class="display-7  sFont text-center control-label">
                                                        Password
                                                    </label>
                                                    <input type="password" asp-for="@Model.user.Password" class="form-control">
                                                </div>

                                                <input type="submit" class="btn btn-primary" value="Login">
                                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            @Html.Raw(ViewBag.Message)
                                                        </label>
                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </section>
    </form>
</div>